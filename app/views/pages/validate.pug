extends ../layouts/layout

block vars
  - title = "BrayLeinoSplash Starter Kit";
  - keyword = "Splash, BrayLeino";
  - description = "BrayLeinoSplash Starter Kit - Pug/Sass/ES6 - webpack";
  - menuIndex = 2

block container
  section.section-nav
    include ../shared/demo_nav
  section.section-one
    .container
      h1 Form - Validation
      .desc
        p By default, all validate rules base on HTML5 attribute pattern and required.
  section.section-two
    .container
      h2.heading I - Default Setting
      form.form-demo(action="#",method="POST",data-bls-validation="data-bls-validation")
        .form-group
          input.form-control(type='text',required="required", data-error-require='This is required text field!!!', placeholder="Text required")
        .form-group
          select.form-control(data-bls-selection="data-bls-selection",type='text',required="required", data-error-require='This is required select field!!!')
            option(value='', disabled, selected) - Please select 1 option -
            option(value=1) No.1
            option(value=2) No.2
            option(value=3) No.3
            option(value=4) No.4
        .form-group
          h4 This is group radio option:
          .radio-group(data-ref-require='#dependField',data-ref-require-message='This is error message for field define by data-ref-require',data-ref-condition='2')
            label.radio-box
              input.form-control(type='radio', name="radioField", value="1", required="required", data-error-require='This is required field!!!')
              | Value is 1
            label.radio-box
              input.form-control(type='radio', name="radioField", value="2", required="required", data-error-require='This is required field!!!')
              | Value is 2
            label.radio-box
              input.form-control(type='radio', name="radioField", value="3", required="required", data-error-require='This is required field!!!')
              | Value is 3
        .form-group
          label(for='dependField') This field only required when  radio above is 2
          input.form-control(type='email',id='dependField',pattern="[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[a-z]{2,4}", data-error-pattern='Wrong email format', placeholder='Email field')
        .form-group
          input.form-control(type='email',required="required", data-error-require='This is required field!!!', pattern="[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[a-z]{2,4}", data-error-pattern='Wrong email format', placeholder='Email field')
        .form-group
          input.form-control(type='tel',required="required", data-error-require='This is required field!!!', pattern="[+0-9]*", data-error-pattern='Only accept + and number', placeholder='Phone field')
        .form-group
          input.form-control(type='text',required="required", data-error-require='This is required field!!!', pattern="[0-9]*", data-error-pattern='Only accept number', placeholder='Number field')
        .form-group
          input.form-control(type='text',required="required", data-error-require='This is required field!!!', pattern="[5-9]\\d|[1-9]\\d{2,}", data-error-pattern='Number must be greater than 49', placeholder='Number must greater than 49')
        .form-group
          textarea.form-control(rows=4,required="required",data-error-require='This is required field!!!')
        .form-group
          button.btn.btn-primary(type='submit') Submit Form